<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.psmcmaintenance"
	     name="PSMC Maintenance"
	     version="1.0.1"
	     provider-name="The Papaw">
  <requires>
  	<import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="service.py" start="startup">
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">A simple all-around Maintenance Tool</summary>
    <description lang="en">PSMC Maintenance does many maintenance functions needed to help with a much smoother PSMC (Kodi) experience with out all the fluff. Features include: Auto delete of cache at start up, notifies when packages and thumbs reach a set amount of wasted storage space (you can set and change sizes), cuts down on your devices read/writes on the ROM. Also has many Backup/Restore Options, Speed test, IP check and other features!!</description>
    <disclaimer lang="en"></disclaimer>
    <language></language>
    <platform>all</platform>
	<assets>
		<icon>icon.png</icon>
		<fanart>fanart.jpg</fanart>
	</assets>
    <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
    <forum></forum>
    <website></website>
    <email></email>
  </extension>
</addon>

<addon id="repository.psmc" name="PSMC Repository" version="1.0.4" provider-name="The Papaw">
    <requires>
        <import addon="xbmc.addon" version="12.0.0"/>
    </requires>
    <extension point="xbmc.addon.repository" name="PSMC Repository">
        <info compressed="false">https://raw.githubusercontent.com/thepapaw/psmc/master/_zips/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/thepapaw/psmc/master/_zips/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/thepapaw/psmc/master/_zips/</datadir>
        <hashes>false</hashes>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>The Official Repo for the PSMC (Papaw's Son Media Center), a Kodi Fork</summary>
        <description>This is the repository for the "Official" PSMC (Papaw's Son Media Center). A Kodi fork.</description>
        <platform>all</platform>
        <genre>movies,usa</genre>
		<assets>
			<icon>icon.gif</icon>
			<icon>icon.png</icon>
			<fanart>fanart.jpg</fanart>
		</assets>
    </extension>
</addon>

